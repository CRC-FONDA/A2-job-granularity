#create one fasta file out of the fasta files in the bin
rule create_bin_file:
    input:
        lambda wildcards: bins[int(wildcards.bin_id)]
    output:
        temp("data/genome_bins/bin_{bin_id}.fasta")
    shell:
        "cat {input} > {output}"

num_threads = config["threads"]

